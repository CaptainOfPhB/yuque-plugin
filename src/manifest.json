{
  "name": "Yuque Plugin - 语雀插件",
  "description": "A Chrome extension that can make Yuque more powerful",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "scripting",
    "contextMenus",
    "clipboardWrite"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_end",
      "css": [
        "vendors/antd/antd.min.css"
      ],
      "js": [
        "content_scripts.js"
      ]
    }
  ],
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html",
    "default_icons": {
      "16": "images/yuque_16.png",
      "32": "images/yuque_32.png",
      "48": "images/yuque_48.png",
      "128": "images/yuque_128.png"
    }
  },
  "icons": {
    "16": "images/yuque_16.png",
    "32": "images/yuque_32.png",
    "48": "images/yuque_48.png",
    "128": "images/yuque_128.png"
  }
}
